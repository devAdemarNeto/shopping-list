<%= form_with(model: item, id: dom_id(item, 'form')) do |form| %>
    <% if item.errors.any? %>
      <div class="text-red-500 text-xs mb-2">
        <% item.errors.full_messages.each do |message| %>
          <p><%= message %></p>
        <% end %>
      </div>
    <% end %>
  
    <div class="flex gap-2">
      <%= form.text_field :name, placeholder: "Nome do item", class: "flex-1 rounded border-gray-300" %>
      <%= form.text_field :quantity, placeholder: "Quantidade", class: "w-24 rounded border-gray-300" %>
      <%= form.submit item.persisted? ? "Atualizar" : "Adicionar", class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600" %>
    </div>
  <% end %>